source 'https://rubygems.org'

# Rails
gem 'rails', '4.0.0.rc2'

# Environment
gem 'dotenv-rails', group: :production

# Database
gem 'sqlite3'

# Authentication
gem 'devise'
# gem 'bcrypt-ruby', '~> 3.0.0'

# Async Processing
