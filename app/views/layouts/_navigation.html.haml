%div.navbar
  %div.navbar-inner
    = link_to('Things to Apples', play_path, {class: 'brand'})
    %ul.nav
      - if user_signed_in?
        %li= link_to('Play', play_path)
        %li.divider-vertical
        %li= link_to('Leaderboard', leaders_path)
        %li.divider-vertical
        %li= link_to('Game Archive', archives_path)
        %li.divider-vertical
      %li= link_to('Instructions', instructions_path)
    %ul.nav.pull-right
      - if user_signed_in?
        %li= link_to("Logout: #{current_user.email}", destroy_user_session_path, method: 'delete')
      - else
        %li= link_to('Login', new_user_session_path)
        %li.divider-vertical
        %li= link_to('Sign Up', new_user_registration_path)
